{% extends 'base.html.twig' %}

{% block title %}Dodaj zdjęcie{% endblock %}
{% block content %}
    <div class="container mt-3 col-lg-3 col-md-5">
        <h1 class="text-center p-3 font-weight-bold">Dodaj zdjęcie</h1>
        <div class="col-lg-12 bg-light text-body border border-dark p-3 mb-5">

        {% for message in app.flashes('success') %}
            <div class="alert alert-success text-center">
                {{message}}
            </div>
        {% endfor %}

        {% for message in app.flashes('error') %}
            <div class="alert alert-danger text-center">
                {{message}}
            </div>
        {% endfor %}


        {% form_theme addPhotoForm 'bootstrap_5_layout.html.twig' %}
        {{ form_start(addPhotoForm) }}
        {{ form_row(addPhotoForm.filename) }}
        {{ form_row(addPhotoForm.weight, {'attr': {'placeholder': 'Opcjonalnie'}}) }}
        {{ form_row(addPhotoForm.length, {'attr': {'placeholder': 'Opcjonalnie'}}) }}
        {{ form_row(addPhotoForm.type) }}
        <p class="text-center">
        <button type="submit" class="badge btn-lg btn-success mt-3">Wyślij</button>
        </p>

        {{ form_end(addPhotoForm) }}
    </div>
    </div>
{% endblock %}
