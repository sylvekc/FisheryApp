{% extends 'base.html.twig' %}

{% block title %}Rejestracja{% endblock %}

{% block content %}
<div class="container mt-3 col-lg-3 col-md-5">
    <h1 class="text-center p-3 font-weight-bold">Zarejestruj się</h1>
    <div class="bg-light text-body border border-dark p-3 mb-3">
{% form_theme registrationForm 'bootstrap_5_layout.html.twig' %}
    {{ form_start(registrationForm) }}
        {{ form_row(registrationForm.name) }}
        {{ form_row(registrationForm.surname) }}
        {{ form_row(registrationForm.username) }}
        {{ form_row(registrationForm.password) }}
        {{ form_row(registrationForm.agreeTerms) }}
        <p class="text-center">
            <button type="submit" class="badge btn-lg btn-success mt-3">Zarejestruj się</button>
        </p>
        {{ form_end(registrationForm) }}
    </div>
</div>

{% endblock %}
